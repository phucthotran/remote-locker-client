<UserControl x:Class="RemoteLocker.Module.NotificationModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto"
             Width="Auto"
             >
    <Border Background="#b91d1e" BorderBrush="#ff2e13" BorderThickness="2" MinWidth="350" MinHeight="80">
        <Grid>
            <StackPanel>
                <TextBlock Text="{Binding Title}" FontSize="16" Foreground="GhostWhite" Padding="5, 0, 0, 0" Margin="5, 0, 0, 0"/>
                <TextBlock Text="{Binding Summary}" FontSize="18" Foreground="White" Padding="5" Margin="5"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
